{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleSuffixes": [".ios", ".native", ".android", ".web", ""],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "tailwind.config": ["./tailwind.config.js"],
      "@/assets/*": ["./assets/*"],
      "@/components/*": ["./components/*"],
      "@/store/*": ["./store/*"],
      "@/type/*": ["./type/*"],
      "@/utils/*": ["./utils/*"],
      "@/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
